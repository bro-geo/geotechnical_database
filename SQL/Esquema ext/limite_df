-- Table: ext.limite_df

-- DROP TABLE ext.limite_df;

CREATE TABLE ext.limite_df
(
    df_pk integer NOT NULL,
    df_nome character varying(16) COLLATE pg_catalog."default",
    df_area numeric(6,2),
    df_perimetro numeric(6,2),
    geom geometry(Polygon,31983),
    CONSTRAINT limite_df_pkey PRIMARY KEY (df_pk),
    CONSTRAINT geomtype_limite_df CHECK (geometrytype(geom) = 'POLYGON'::text OR geom IS NULL),
    CONSTRAINT geomtype_limite_ra CHECK (geometrytype(geom) = 'POLYGON'::text OR geom IS NULL),
    CONSTRAINT ndims_limite_df CHECK (st_ndims(geom) = 2),
    CONSTRAINT ndims_limite_ra CHECK (st_ndims(geom) = 2),
    CONSTRAINT simple_limite_df CHECK (st_issimple(geom) = true),
    CONSTRAINT simple_limite_ra CHECK (st_issimple(geom) = true),
    CONSTRAINT srid_limite_df CHECK (st_srid(geom) = 31983),
    CONSTRAINT srid_limite_ra CHECK (st_srid(geom) = 31983),
    CONSTRAINT valid_limite_df CHECK (st_isvalid(geom) = true),
    CONSTRAINT valid_limite_ra CHECK (st_isvalid(geom) = true)
)
WITH (
    OIDS = FALSE
)
TABLESPACE pg_default;

ALTER TABLE ext.limite_df
    OWNER to ext;

GRANT SELECT ON TABLE ext.limite_df TO consulta;
GRANT ALL ON TABLE ext.limite_df TO sde;
GRANT ALL ON TABLE ext.limite_df TO ext;

-- Index: sidx_limite_df_geom

-- DROP INDEX ext.sidx_limite_df_geom;

CREATE INDEX sidx_limite_df_geom
    ON ext.limite_df USING gist
    (geom)
    TABLESPACE pg_default;
